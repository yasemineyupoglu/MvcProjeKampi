@model EntityLayer.Concrete.Admin

@{
    ViewBag.Title = "EditAdmin";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Admin Güncelleme Sayfası</h2>
@using (Html.BeginForm("EditAdmin", "Authorization", FormMethod.Post))
{

    <div class="form-group">
        @Html.HiddenFor(c => c.AdminID, new { @class = "form-control" })
        @Html.HiddenFor(c => c.AdminPassword, new { @class = "form-control" })
        @Html.HiddenFor(c => c.AdminUserName, new { @class = "form-control" })
        <br />
        @Html.Label("Admin Kullanıcı Adı")
        @Html.TextBoxFor(c => c.AdminUserName, new { @class = "form-control" })
        <br />
        @Html.Label("Rol")
        @Html.DropDownListFor(c => c.RoleId, (List<SelectListItem>)ViewBag.valueadmin, new { @class = "form-control" })
        <br />

        <button class="btn btn-success">Güncelle</button>


    </div>
}

